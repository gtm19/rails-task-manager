<h1>Edit Task</h1>
<%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :details, class: "control-label" %>
      <%= f.text_area :details, class: "form-control" %>
    </div>
    <div class="form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, class: "form-check-label" %>
    </div>
    <%= f.submit "Confirm Changes", class: "mt-2 btn btn-primary" %>
<% end %>
<hr>
<%= button_to "Back to Tasks", tasks_path, class: "btn btn-primary", method: :get %>